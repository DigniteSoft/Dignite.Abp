@using System.Diagnostics.CodeAnalysis
@inherits Components.Core.FileEditPlus
<Control Role="ControlRole.File">
    <div style="position:relative;display:inline-block;" class="@Class">
        <input style="position: absolute;width: 100%;height: 100%;opacity: 0;top: 0;left: 0;z-index:2;"
