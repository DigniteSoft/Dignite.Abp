@using Dignite.Abp.FieldCustomizing.Blazor
@using Dignite.Abp.FieldCustomizing.FieldControls
@using Dignite.Abp.FieldCustomizing.FieldControls.Textbox
@inherits FieldControlConfigurationComponentBase

<Validation>
    <Field>
        <FieldLabel>@L["DisplayName:Name"]</FieldLabel>
        <TextEdit MaxLength="64" @bind-Text="@Definition.Name" />
    </Field>
</Validation>

<Validation>
    <Field>
        <FieldLabel>@L["DisplayName:DisplayName"]</FieldLabel>
        <TextEdit @bind-Text="@Definition.DisplayName" />
    </Field>
</Validation>
<Validation>
    <Field>
        <FieldLabel>@L["DisplayName:Description"]</FieldLabel>
        <TextEdit @bind-Text="@Configuration.Description" />
    </Field>
</Validation>
<Field>
    <Check TValue="bool" @bind-Checked="@Configuration.Required">@L["DisplayName:IsRequired"]</Check>
</Field>
<Validation>
<Field>
    <FieldLabel>@L["DisplayName:Placeholder"]</FieldLabel>
    <TextEdit @bind-Text="@Configuration.Placeholder" />
</Field>
</Validation>
<Validation>
<Field>
    <FieldLabel>@L["DisplayName:DefaultValue"]</FieldLabel>
    <TextEdit @bind-Text="@Definition.DefaultValue" />
</Field>
</Validation>
<Field>
    <FieldLabel>@L["DisplayName:TextboxMode"]</FieldLabel>
    <RadioGroup TValue="TextboxMode" Name="textboxMode" @bind-CheckedValue="@Configuration.Mode">
        <Radio TValue="TextboxMode" Value="@TextboxMode.SingleLine">@L["DisplayName:TextboxMode.SingleLine"]</Radio>
        <Radio TValue="TextboxMode" Value="@TextboxMode.MultipleLine">@L["DisplayName:TextboxMode.MultipleLine"]</Radio>
    </RadioGroup>
</Field>
<Field>
    <FieldLabel>@L["DisplayName:CharLimit"]</FieldLabel>
    <NumericEdit @bind-Value="@Configuration.CharLimit" />
</Field>

@code{

    public override Type FieldControlProviderType => typeof(TextboxFieldControlProvider);

    TextboxConfiguration Configuration;

    protected override void OnParametersSet()
    {
        Configuration = new TextboxConfiguration(Definition.Configuration);
    }
}